{
  "name": "crypto-exchange",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "chmod +x scripts/build.sh && ./scripts/build.sh",
    "build:packages": "bun run --filter='@crypto-exchange/*' build",
    "build:apps": "bun run --filter='backend' build && bun run --filter='frontend' build",
    "build:clean": "chmod +x scripts/clean.sh && ./scripts/clean.sh && bun run build",
    "build:docker": "chmod +x scripts/docker-build.sh && ./scripts/docker-build.sh",
    "dev": "bun run --filter='*' dev",
    "test": "bun run --filter='*' test",
    "lint": "bunx biome check --write",
    "lint:check": "bunx biome check",
    "format": "bunx biome format --write",
    "clean": "bun run --filter='*' clean",
    "type-check": "bun run --filter='*' type-check",
    "db:generate": "bunx prisma generate",
    "db:push": "bunx prisma db push",
    "db:migrate": "bunx prisma migrate dev",
    "db:reset": "bunx prisma migrate reset",
    "db:studio": "bunx prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:build:clean": "docker-compose build --no-cache",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:logs": "docker-compose logs -f",
    "k8s:deploy": "chmod +x scripts/k8s-deploy.sh && ./scripts/k8s-deploy.sh",
    "k8s:remove": "chmod +x scripts/k8s-remove.sh && ./scripts/k8s-remove.sh",
    "setup:scripts": "chmod +x scripts/make-executable.sh && ./scripts/make-executable.sh",
    "setup:telegram": "chmod +x scripts/setup-telegram.sh && ./scripts/setup-telegram.sh",
    "frontend:dev": "bun run --filter=frontend dev",
    "backend:dev": "bun run --filter=backend dev",
    "ui:dev": "bun run --filter=@crypto-exchange/ui dev",
    "ui:add": "bunx shadcn@latest add --cwd packages/ui",
    "setup": "bun install && bun run db:generate && bun run db:push"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "prisma": "^6.12.0"
  }
}
